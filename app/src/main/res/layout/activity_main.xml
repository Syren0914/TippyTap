<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="232dp"
        android:layout_height="225dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/etbase_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="54dp"
        android:background="@drawable/backgroundbox"
        android:ems="8"
        android:hint="Bill amount"
        android:inputType="numberDecimal"

        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Nuber_of_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="38dp"
        android:layout_below="@id/TV_Tip"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroundbox"
        android:padding="3dp"
        android:text="People"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/TV_Tip"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Tv_Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/backgroundbox"
        android:padding="3dp"
        android:layout_below="@+id/image"
        android:text="Base :"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Total_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="@drawable/backgroundbox"
        android:fontFamily="sans-serif-black"
        android:padding="3dp"
        android:layout_below="@+id/number_ofp"
        android:layout_marginRight="100dp"
        android:textSize="24sp"
        android:layout_alignParentRight="true"
        tools:text="103.11" />

    <TextView
        android:id="@+id/Tv_percentage_feeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tv_Base"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="37dp"


        android:background="@drawable/backgroundbox"
        android:padding="3dp"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:text="24%" />

    <TextView
        android:id="@+id/Feeling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-black"
        android:text="Acceptable"
        android:layout_below="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number_ofp"
        android:layout_width="137dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/backgroundbox"
        android:ems="7"
        android:hint="Number"
        android:layout_below="@+id/Tip"
        android:layout_alignParentRight="true"
        android:inputType="number"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.718"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_Tip"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/backgroundbox"
        android:padding="4dp"
        android:layout_below="@+id/Tv_percentage_feeling"
        android:layout_marginLeft="40dp"
        android:text="Tip"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="183dp"
        android:layout_height="19dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/backgroundbox"
        android:layout_below="@+id/etbase_amount"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:max="30"
        android:padding="3dp"
        android:progress="3"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Tv_Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nuber_of_people"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/backgroundbox"
        android:padding="5dp"
        android:text="Total :"

        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Nuber_of_people" />

    <TextView
        android:id="@+id/Tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-black"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120dp"
        android:layout_below="@+id/Feeling"
        android:layout_marginTop="20dp"


        android:textSize="24dp"
        android:background="@drawable/backgroundbox"
        android:padding="3dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592"
        tools:text="19.96" />

    <TextView
        android:id="@+id/Footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Made by Kira"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/lightPurple"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>